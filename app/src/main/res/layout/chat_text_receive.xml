<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <include layout="@layout/chat_item_base_time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/chat_ItemMarginTop"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            style="@style/chat_avatar" />

        <TextView
            android:id="@+id/textContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_item_base_left_marginToUsername"
            android:background="@drawable/chat_left_qp"
            android:gravity="left|center"
            android:lineSpacingExtra="2dp"
            android:maxWidth="@dimen/chat_ContentMaxWidth"
            android:minHeight="30dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:textColor="@color/chat_LeftText" />
    </LinearLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="@dimen/chat_MaxNameWidth"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="username"
        android:textSize="11sp"
        android:visibility="gone" />

</LinearLayout>