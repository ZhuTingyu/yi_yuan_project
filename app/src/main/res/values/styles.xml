<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/primary_color_scheme</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="tabbar_item_btn_style">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="My">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="My.ImageView">
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="My.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="My.ImageView.Photo_Avatar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="My.Button.logout" parent="My.TextView._White">
        <item name="android:background">@drawable/btn_logout_selector</item>
    </style>

    <style name="My.TextView._White">
        <item name="android:textColor">@color/chat_base_color_text_white</item>
    </style>

    <style name="Register_Edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginLeft">@dimen/register_margin</item>
        <item name="android:background">@color/chat_transparent</item>
    </style>

    <style name="Animations" />

    <!-- dialog -->
    <style name="TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHighlight">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textColorLink">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.DialogWindowTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="Register_Input">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/base_edit_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_action_bar_height</item>
        <item name="android:layout_marginTop">@dimen/register_margin</item>
        <item name="android:layout_marginLeft">@dimen/register_margin</item>
        <item name="android:layout_marginRight">@dimen/register_margin</item>
    </style>

    <style name="My.TextView._Black">
        <item name="android:textColor">@color/chat_base_color_text_black</item>
    </style>

    <style name="My.Button.theme" parent="My.TextView._White">
        <item name="android:background">@drawable/common_btn</item>
    </style>

    <style name="My.ImageView.Photo_Middle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>


    <style name="My.TextView._Gray">
        <item name="android:textColor">@color/base_color_text_gray</item>
    </style>


    <style name="AnimStyle2">
        <item name="android:windowEnterAnimation">@anim/push_top_in2</item>
        <item name="android:windowExitAnimation">@anim/push_top_out2</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_width">@dimen/chat_avatarSize</item>
        <item name="android:layout_height">@dimen/chat_avatarSize</item>
    </style>

    <style name="profile_fragment_left_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/myspace_margin_left</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="conversation_detail_base_left_style">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="conversation_detail_base_left_layout">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/group_detail_btn</item>
    </style>

    <style name="segment_left">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/segment_left_font</item>
        <item name="android:background">@drawable/segment_left_background</item>
    </style>

    <style name="segment_center">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/segment_center_font</item>
        <item name="android:background">@drawable/segment_center_background</item>
    </style>

    <style name="segment_right">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/segment_right_font</item>
        <item name="android:background">@drawable/segment_right_background</item>
    </style>

    <style name="app_pop">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>

    <style name="AudioDialog">
        <item name = "android:windowBackground">@drawable/dialog_content_bg</item>
        <item name = "android:windowFrame">@null</item><!-- 设为无边框 -->
        <item name = "android:windowIsFloating">true</item><!-- 设定为浮动的 -->
        <item name = "android:windowIsTranslucent">false</item>
        <item name = "android:backgroundDimEnabled">false</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/chat_base_color_text_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/chat_time_block</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="chat_record_button_toast_dialog_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/chat_record_button_round_background</item>
    </style>

    <style name="chat_avatar">
        <item name="android:layout_width">@dimen/chat_style_avatar_userHead</item>
        <item name="android:layout_height">@dimen/chat_style_avatar_userHead</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:src">@drawable/chat_default_user_avatar</item>
    </style>

    <style name="chat_item_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="chat_item_inner_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="chat_item_inner_left_layout" parent="chat_item_inner_layout">
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="chat_item_inner_right_layout" parent="chat_item_inner_layout">
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="chat_play_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert"/>

</resources>
